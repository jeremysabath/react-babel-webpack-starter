{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "requirePragma": false,
  "insertPragma": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "jsxBracketSameLine": false,
        "parser": "babel",
        "printWidth": 100,
        "semi": false
      }
    }
  ]
}
